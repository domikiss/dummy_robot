<launch>
  <!-- values passed by command line input -->     
  <arg name="model" default="dummy_robot" />
  <arg name="gui" default="false" />

  <!-- Robot URDF definition -->
  <arg name="urdf_file" default="$(find xacro)/xacro --inorder '$(find dummy_robot_description)/urdf/$(arg model).urdf.xacro'"/>
  <param name="robot_description" command="$(arg urdf_file)"/>

  <!-- Start 3 nodes: rviz, joint_state_publisher and robot_state_publisher -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find dummy_robot_description)/rviz/model_conf.rviz" required="true" />
  <!-- (required = "true") if rviz dies, entire roslaunch will be killed -->
  
  <!-- Send joint values -->
  <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher">
    <param name="/use_gui" value="$(arg gui)"/>
  </node>
  <!-- Combine joint values to TF-->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

</launch>
